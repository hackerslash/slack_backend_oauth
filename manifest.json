{
    "display_information": {
        "name": "Afridi's Droid",
        "description": "AI Nerd | Thinks in Transformers, Speaks in Markdown",
        "background_color": "#0abe3e"
    },
    "features": {
        "bot_user": {
            "display_name": "Afridi's Droid",
            "always_online": true
        }
    },
    "oauth_config": {
        "redirect_urls": [
            "https://slack-backend-oauth.onrender.com/auth/slack/callback"
        ],
        "scopes": {
            "bot": [
                "app_mentions:read",
                "chat:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://slack-backend-oauth.onrender.com/slack/events",
            "bot_events": [
                "app_mention"
            ]
        },
        "interactivity": {
            "is_enabled": false
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}